%p
  %table.show-table
    %tr
      %td= t('uuid')
      %td.table-cell-monospace= @virtual_machine.id_at_site
    %tr
      %td= t('virtual_machines.name')
      %td= @virtual_machine.name
    %tr
      %td= t('virtual_machines.state')
      %td= @virtual_machine.state
    %tr
      %td= t('virtual_machines.ip_address')
      %td.table-cell-monospace= @virtual_machine.ip

%p
  .btn-group
    = link_to admin_virtual_machines_path,
      class: 'btn btn-default', title: t('back') do
      =icon 'reply'
      = t('back')
